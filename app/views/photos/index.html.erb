<div class="row">
  <div class="large-12 columns">
    <h3>All Photos</h3>
    <hr>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <%= link_to 'New Photo', new_photo_path, class: "button small round" %>
  </div>
</div>
<div class="row">
  <% @photos.each do |photo| %>
    <div class="large-4 small-6 columns">
      <%= link_to image_tag(photo.image.url(:thumb).to_s), photo %>
      <%#= link_to image_tag("http://placehold.it/500x500&text=Thumbnail"), photo %>
      <div class="panel">
        <p><%= photo.caption %><br/>
        <small><%= photo.when_taken %></small><br/>
        <%= photo.description %></p>
      </div>
    </div>
  <% end %>
</div>

